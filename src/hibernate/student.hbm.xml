<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="models.Student" table="students">
        <meta attribute="class-description">
            This class contains developer's details.
        </meta>
        <id name="id" type="int" column="id_stud"/>
        <property name="name" column="name" type="string"/>
        <property name="SName" column="surname" type="string"/>
        <property name="facid" type="int" column="fac_id"/>
    </class>
</hibernate-mapping>